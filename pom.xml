<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.forgerock</groupId>
        <artifactId>forgerock-parent</artifactId>
        <version>1.1.0</version>
    </parent>

    <properties>
        <forgerock-ui.version>1.0.8-SNAPSHOT</forgerock-ui.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <groupId>org.forgerock.commons.ui</groupId>
    <artifactId>forgerock-ui</artifactId>
    <version>1.0.8-SNAPSHOT</version>
    <name>Forgerock Web UI</name>
    <description>Common modern ForgeRock Web UI</description>
    <packaging>pom</packaging>

    <inceptionYear>2012</inceptionYear>
    <scm>
        <connection>scm:svn:https://svn.forgerock.org/commons/forgerock-ui/trunk</connection>
        <developerConnection>scm:svn:https://svn.forgerock.org/commons/forgerock-ui/trunk</developerConnection>
        <url>http://sources.forgerock.org/browse/commons/forgerock-ui/trunk</url>
    </scm>
    <distributionManagement>
        <site>
            <id>forgerock.org</id>
            <name>ForgeRock Community Server</name>
            <url>scp://forgerock.org/var/www/vhosts/commons.forgerock.org/httpdocs/forgerock-ui</url>
        </site>
    </distributionManagement>
    <repositories>
        <repository>
            <id>forgerock-staging-repository</id>
            <name>ForgeRock Release Repository</name>
            <url>http://maven.forgerock.org/repo/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>forgerock-snapshots-repository</id>
            <name>ForgeRock Snapshot Repository</name>
            <url>http://maven.forgerock.org/repo/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <modules>
        <module>forgerock-ui-commons</module>
        <module>forgerock-ui-user</module>
    </modules>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>jslint-maven-plugin</artifactId>
                    <version>1.0.1</version>
                    <configuration>
                        <assumeConsoleAlertEtc>true</assumeConsoleAlertEtc>
                        <strictWhiteSpace>false</strictWhiteSpace>
                    </configuration>
                </plugin>
                
                <plugin>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <mavenExecutorId>forked-path</mavenExecutorId>
                        <useReleaseProfile>false</useReleaseProfile>
                        <suppressCommitBeforeTag>false</suppressCommitBeforeTag>
                        <goals>deploy</goals>
                        <arguments>-Pforgerock-release</arguments>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencyManagement>
        <dependencies>          
          <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>moment</artifactId>
                <version>1.7.2</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui</groupId>
                <artifactId>forgerock-ui-commons</artifactId>
                <version>${forgerock-ui.version}</version>
                <type>zip</type>
                <classifier>www</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>jquery.ba-dotimeout</artifactId>
                <version>1.0</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>handlebars</artifactId>
                <version>1.0.rc.1</version>
                <type>js</type>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>i18next</artifactId>
                <version>1.7.1</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>requirejs</artifactId>
                <version>2.1.10</version>
                <classifier>min</classifier>
                <type>js</type>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>backbone</artifactId>
                <version>0.9.2</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>jquery</artifactId>
                <version>1.8.1</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>underscore</artifactId>
                <version>1.4.4</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>spin</artifactId>
                <version>1.2.5</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>datatables</artifactId>
                <version>1.9.3</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>xdate</artifactId>
                <version>0.7</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>js2form</artifactId>
                <type>js</type>
                <version>1.0</version>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>form2js</artifactId>
                <type>js</type>
                <version>1.0</version>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>jquery-ui</artifactId>
                <version>1.8.23.custom</version>
                <type>js</type>
                <classifier>min</classifier>
            </dependency>
            <dependency>
                <groupId>org.forgerock.commons.ui.libs</groupId>
                <artifactId>contentflow</artifactId>
                <version>1.0.2</version>
                <classifier>min</classifier>
                <type>js</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
